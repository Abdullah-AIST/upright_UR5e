<?xml version="1.0" encoding="utf-8"?>
<robot name="end_effector_fingers">
  <joint name="tool0_tcp_fixed_joint" type="fixed">
    <origin rpy="0.0 0.0 3.14159" xyz="0.0 0.0 0.290"/>
    <parent link="ur10_arm_tool0"/>
    <child link="thing_tool"/>
  </joint>

  <!-- s = 0.3 -->
